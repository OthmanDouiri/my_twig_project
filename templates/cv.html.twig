<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My CV</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light text-dark">

    <!-- Contenedor principal con margen superior -->
    <div class="container mt-5 p-4 bg-white shadow rounded">

        <!-- Encabezado -->
        <header class="text-center mb-5">
            <h1 class="text-primary">{{ name }}</h1>
            <p class="lead text-secondary">{{ title }}</p>
        </header>

        <!-- Información personal -->
        <section>
            <h2 class="text-secondary">Personal Information</h2>
            <ul class="list-unstyled">
                <li><strong>Email:</strong> {{ email }}</li>
                <li><strong>Phone:</strong> {{ phone }}</li>
                <li><strong>Address:</strong> {{ address }}</li>
            </ul>
        </section>

        <!-- Educación -->
        <section class="mt-5">
            <h2 class="text-secondary">Education</h2>
            <ul class="list-group list-group-flush">
                {% for degree in education %}
                    <li class="list-group-item">{{ degree.title }} - {{ degree.institution }} ({{ degree.year }})</li>
                {% endfor %}
            </ul>
        </section>

        <!-- Experiencia -->
        <section class="mt-5">
            <h2 class="text-secondary">Experience</h2>
            <ul class="list-group list-group-flush">
                {% for job in experience %}
                    <li class="list-group-item">{{ job.position }} at {{ job.company }} ({{ job.years }})</li>
                {% endfor %}
            </ul>
        </section>

        <!-- Habilidades -->
        <section class="mt-5">
            <h2 class="text-secondary">Skills</h2>
            <ul class="list-group list-group-flush">
                {% for skill in skills %}
                    <li class="list-group-item">{{ skill }}</li>
                {% endfor %}
            </ul>
        </section>
    </div>

    <!-- Scripts de Bootstrap -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
